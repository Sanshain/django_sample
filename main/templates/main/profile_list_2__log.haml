-extends "detail.html"
		
	-block links 
	
		={block.super}
		-load staticfiles
		-load dev_tags
	
		/[if IE 8]
			%script(src='{% static "ie8.js" %}')
		%link(
			id="dynamic_link"
			rel="stylesheet" 
			href='{% static "style/pages/profile_list_2.css" %}')
		%script(src='{% static "ajax.js" %}')		
		%script(src='{% static "js/pages/profile_list_2.js" %}')

	-block script
	
		={block.super} //- inittialize
		
		
		/-include 'main/profile_list/behavior.js'
	
	-block header
		1111111111111111111
		/Users:
		
	-block main
            %ul.profiles_list
            	-for User in Users
            	
            		/User.Status		
            	
            		%li(id='us_={User.id}' 
            			data-_refresh ='content'
            			data-to ='{% url "user" User.id %}')
            			
            			%h3 ={User.username} ={User.last_name} 
            			
            			.i_desc Male: 2. Sex: jenshina
            			
            			-if User.Image
            				.logo 
            					%img(src='={User.Image.url}')
            			-else
            				.logo 		
            			
            			.i_mnu(onclick='friend_act(this,event)')
            				/button 12456
            
            				-if User.Recipient
            					%button.to_friend.sended Reconside
            					
            				-elif User.Sender				
            					%button.to_friend.sended.out Refuse
            					%button.to_friend.sended Accept
            					
            				-elif User.Friend
            					%button.to_friend Remove friend
            					
            				-elif User.Me
            					%button.to_friend(
            						name='self'
            						style='border:1px solid orange;') Profile
            						
            				-else
            					%button.to_friend To_friend
            					
            	-csrf_token
            	
            	-include "fragments/___paginator.html" with object_list=page_obj|default:Users
            	
            
            
		
	-block section
	/-block aside
	
